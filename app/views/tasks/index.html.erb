<h1>My tasks</h1>

<% @tasks.each do |task| %>
  <%= link_to task.title, task_path(task) %>
  <% if task.completed %>
  <i class="fas fa-check-square"></i>
  <% end %>

  <%= link_to 'delete', task_path(task) , method: :delete, data: {confirm: "Delete #{task.title}?" } %>


<% end %>
